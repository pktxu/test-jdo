<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">

    <persistence-unit name="MyTest">
        <!-- Add all of your model classes here -->
        <class>mydomain.model.Person</class>
        <class>mydomain.model.Alias</class>
        <exclude-unlisted-classes />
        <properties>
            <!-- Update these datastore details if different -->
            <property name="javax.jdo.PersistenceManagerFactoryClass" value="org.datanucleus.api.jdo.JDOPersistenceManagerFactory"/>
	    <property name="javax.jdo.option.ConnectionURL" value="jdbc:postgresql://localhost/test-jdo"/>
            <property name="javax.jdo.option.ConnectionDriverName" value="org.postgresql.Driver"/>
            <property name="javax.jdo.option.ConnectionUserName" value="user"/>
            <property name="javax.jdo.option.ConnectionPassword" value="password"/>

            <property name="datanucleus.autoCreateSchema" value="false"/>
            <property name="datanucleus.autoCreateColumns" value="false"/>
        </properties>
    </persistence-unit>

</persistence>
